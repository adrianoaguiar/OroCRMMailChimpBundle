<div class="status-enabled pull-left">
    {% if static_segment %}
        <div class="badge badge-enabled status-enabled">
            <i class="icon-status-enabled icon-circle"></i>{{ 'orocrm.marketinglist.status.synced'|trans }}
        </div>
    {% else %}
        <div class="badge badge-disabled status-disabled">
            <i class="icon-status-disabled icon-circle"></i>{{ 'orocrm.marketinglist.status.not_synced'|trans }}
        </div>
    {% endif %}
</div>
