<div class="responsive-cell">
    <div class="box-type1">
        <div class="oro-tabs">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a>{{ 'orocrm.mailchimp.syncstatus.title.label'|trans }}</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active">

                    <div class="box-type1">
                        <div class="control-group">
                            <label class="control-label">
                                {{ 'orocrm.mailchimp.syncstatus.marketing_list_name.label'|trans }}
