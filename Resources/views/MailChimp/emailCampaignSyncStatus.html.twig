                            <div class="controls">
                                <div class="control-label">{{ static_segment.subscribersList.name }}</div>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                {{ 'orocrm.mailchimp.syncstatus.segment_name.label'|trans }}
                            </label>
                            <div class="controls">
                                <div class="control-label">{{ static_segment.name }}</div>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                {{ 'orocrm.mailchimp.syncstatus.last_synced.label'|trans }}
                            </label>
                            <div class="controls">
                                <div class="control-label">
                                    {{ static_segment.lastSynced ?
